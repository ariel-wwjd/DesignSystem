{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ES5", "ES2015", "ES2016", "DOM", "ESNext"],
    "types": ["node"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",   //esm for TypeScript users and esm for JavaScript users 
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    // "target": "es2016",
    "target": "es6",
    // "forceConsistentCasingInFileNames": true,
  }
}
